BossLabel.Font = Enum.Font.Code
BossLabel.Text = "ƒêang qu√©t boss..."

local BossList = {"Bandit Boss","Buggy","Swan","Magma Admiral"}
spawn(function()
    while wait(5) do
        local text = "üòà Danh s√°ch Boss:\n"
        for _,boss in pairs(BossList) do
            local alive = math.random(0,1) == 1 -- gi·∫£ l·∫≠p
            local icon = alive and "üü¢" or "üî¥"
            text = text..icon.." "..boss.."\n"
        end
        BossLabel.Text = text
    end
end)

