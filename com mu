-- Toggle menu
local visible = true
ToggleButton.MouseButton1Click:Connect(function()
    visible = not visible
    TweenService:Create(MainFrame,TweenInfo.new(0.3),{Size = visible and UDim2.new(0,500,0,350) or UDim2.new(0,0,0,350)}):Play()
    wait(0.3)
    MainFrame.Visible = visible
end)
