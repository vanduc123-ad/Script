    local HRP = Player.Character and Player.Character:FindFirstChild("HumanoidRootPart")
    if HRP then
        HRP.CFrame = CFrame.new(500,10,200)
    end
end)

-- Ch·ªçn tab ƒë·∫ßu m·∫∑c ƒë·ªãnh
TabButtons[1].BackgroundColor3 = Color3.fromRGB(60,60,60)
