DarkModeBtn.BackgroundColor3 = Color3.fromRGB(50,50,50)
DarkModeBtn.TextColor3 = Color3.fromRGB(255,255,255)

DarkModeBtn.MouseButton1Click:Connect(function()
    if MainFrame.BackgroundColor3 == Color3.fromRGB(20,20,20) then
        MainFrame.BackgroundColor3 = Color3.fromRGB(245,245,245)
        ContentFrame.BackgroundColor3 = Color3.fromRGB(220,220,220)
        TabFrame.BackgroundColor3 = Color3.fromRGB(200,200,200)
    else
        MainFrame.BackgroundColor3 = Color3.fromRGB(20,20,20)
        ContentFrame.BackgroundColor3 = Color3.fromRGB(15,15,15)
        TabFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)
    end
end)

