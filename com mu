-- Tabs
local TabFrame = Instance.new("Frame", MainFrame)
TabFrame.Size = UDim2.new(0,120,1,-40)
TabFrame.Position = UDim2.new(0,0,0,40)
TabFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)

local ContentFrame = Instance.new("Frame", MainFrame)
ContentFrame.Size = UDim2.new(1,-120,1,-40)
ContentFrame.Position = UDim2.new(0,120,0,40)
ContentFrame.BackgroundColor3 = Color3.fromRGB(15,15,15)

local TabButtons = {}
local TabContents = {}

local function createTab(name, icon)
    local Btn = Instance.new("TextButton", TabFrame)
    Btn.Size = UDim2.new(1,0,0,40)
    Btn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    Btn.Text = icon.." "..name
    Btn.TextColor3 = Color3.fromRGB(255,255,255)
    Btn.Font = Enum.Font.Gotham
    Btn.TextSize = 14
    Btn.BorderSizePixel = 0
    Btn.AutoButtonColor = true

    local Content = Instance.new("ScrollingFrame", ContentFrame)
    Content.Size = UDim2.new(1,0,1,0)
    Content.Visible = false
    Content.CanvasSize = UDim2.new(0,0,0,0)
    Content.ScrollBarThickness = 6
    Content.BackgroundTransparency = 1

    table.insert(TabButtons, Btn)
    table.insert(TabContents, Content)

    Btn.MouseButton1Click:Connect(function()
        for i,v in ipairs(TabContents) do
            v.Visible = false
        end
        for i,v in ipairs(TabButtons) do
            v.BackgroundColor3 = Color3.fromRGB(30,30,30)
        end
        Content.Visible = true
        Btn.BackgroundColor3 = Color3.fromRGB(60,60,60)
    end)

    return Content
end

-- Tab 1: Th√¥ng tin Sever
local InfoContent = createTab("Th√¥ng tin Sever","üìä")
local InfoLabel = Instance.new("TextLabel", InfoContent)
InfoLabel.Size = UDim2.new(1,-10,0,200)
InfoLabel.Position = UDim2.new(0,5,0,5)
InfoLabel.BackgroundTransparency = 1
InfoLabel.TextColor3 = Color3.fromRGB(255,255,255)
InfoLabel.TextXAlignment = Enum.TextXAlignment.Left
InfoLabel.TextYAlignment = Enum.TextYAlignment.Top
InfoLabel.TextSize = 16
InfoLabel.Font = Enum.Font.Code
InfoLabel.Text = "ƒêang t·∫£i..."

-- Update Info
spawn(function()
    while wait(1) do
        local fps = math.floor(1/RunService.RenderStepped:Wait())
        local ping = Stats.Network.ServerStatsItem["Data Ping"]:GetValueString()
        InfoLabel.Text = string.format(
            "üë§ Player: %s\nüèùÔ∏è Level: %s\nüí∞ Bounty: %s\nüëπ Race: %s\nüî• Devil Fruit: %s\n\nüìä FPS: %d\nüåê Ping: %s",
            Player.Name,
            Player.Data and Player.Data.Level.Value or "?",
            Player.leaderstats and Player.leaderstats.Bounty.Value or "?",
            Player.Data and Player.Data.Race.Value or "?",
            Player.Data and Player.Data.DevilFruit.Value or "None",
            fps,
            ping
        )
    end
end)

-- Tab 2: Map
local MapContent = createTab("Map","üó∫Ô∏è")
local MapLabel = Instance.new("TextLabel", MapContent)
MapLabel.Size = UDim2.new(1,-10,0,100)
MapLabel.Position = UDim2.new(0,5,0,5)
MapLabel.BackgroundTransparency = 1
MapLabel.TextColor3 = Color3.fromRGB(255,255,255)
MapLabel.TextXAlignment = Enum.TextXAlignment.Left
MapLabel.TextYAlignment = Enum.TextYAlignment.Top
MapLabel.TextSize = 16
MapLabel.Font = Enum.Font.Code
MapLabel.Text = "ƒêang x√°c ƒë·ªãnh v·ªã tr√≠..."

-- Fake map detector (demo)
local Islands = {
    {"Starter Island",Vector3.new(100,0,100)},
    {"Jungle",Vector3.new(500,0,200)},
    {"Marine",Vector3.new(-200,0,300)},
}
spawn(function()
    while wait(2) do
        local pos = Player.Character and Player.Character:FindFirstChild("HumanoidRootPart") and Player.Character.HumanoidRootPart.Position or Vector3.new(0,0,0)
        local currentIsland = "Kh√¥ng r√µ"
        for _,data in pairs(Islands) do
            if (pos - data[2]).magnitude < 400 then
                currentIsland = data[1]
            end
        end
        MapLabel.Text = string.format("üìç V·ªã tr√≠ hi·ªán t·∫°i: %s\nX: %.0f, Y: %.0f, Z: %.0f",currentIsland,pos.X,pos.Y,pos.Z)
    end
end)

-- Tab 3: C√†i ƒê·∫∑t
local SettingContent = createTab("C√†i ƒê·∫∑t","‚öôÔ∏è")
local DarkModeBtn = Instance.new("TextButton", SettingContent)
